<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:backgroundTint="@color/backTint">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="92dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imagenoti"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/ic_notifications_black_24dp"
            android:contentDescription="@string/title_class"
            card_view:civ_border_color="@color/backTint"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/notifications"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Tu tutoria ha sido aceptada"
            card_view:layout_constraintBottom_toBottomOf="@+id/imagenoti"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintStart_toEndOf="@+id/imagenoti"
            card_view:layout_constraintTop_toTopOf="@+id/imagenoti"
            card_view:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/datenoti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            card_view:layout_constraintEnd_toEndOf="@+id/notifications"
            card_view:layout_constraintHorizontal_bias="1.0"
            card_view:layout_constraintStart_toStartOf="@+id/notifications"
            card_view:layout_constraintTop_toBottomOf="@+id/notifications" />


    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>