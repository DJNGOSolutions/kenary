<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="2dp"
    android:background="@drawable/rounded_corners"
    android:backgroundTint="@color/backTint">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="92dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageclass"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="2dp"
            android:contentDescription="@string/title_class"
            android:background="@drawable/ic_notifications_black_24dp"
            card_view:civ_border_color="@color/backTint"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/numberclass"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:textAppearance="@style/LettersMedium14"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:text="@string/title_class"
            card_view:layout_constraintStart_toEndOf="@+id/imageclass"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/nameclass"
            android:layout_width="139dp"
            android:layout_height="38dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:text="@string/app_name"
            android:textAppearance="@style/Letters12sp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintStart_toEndOf="@+id/imageclass"
            card_view:layout_constraintTop_toBottomOf="@+id/numberclass"
            card_view:layout_constraintVertical_bias="0.225" />


    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>