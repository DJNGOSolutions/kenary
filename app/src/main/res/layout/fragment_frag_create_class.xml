<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.FragCreateClass">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_alignParentLeft="true">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create new ClassRoom"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:theme="@style/LettersMedium24" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="43dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="150dp"
        android:text="Category"
        android:theme="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="210dp"
        android:text="Topic"
        android:theme="@style/TextAppearance.AppCompat.Large"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="55dp" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="196dp"
        android:layout_height="wrap_content"

        android:layout_alignBottom="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="36dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="36dp"
        android:padding="16dp"/>

    <Spinner
        android:id="@+id/spinner3"
        android:layout_width="196dp"
        android:padding="16dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/spinner2"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignLeft="@+id/spinner2" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginBottom="221dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@drawable/corners_accent"
        android:textStyle="bold"
        android:textAppearance="@style/LettersLoginWhite16"
        android:text="Date"
        android:layout_alignLeft="@+id/textView2" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_marginBottom="152dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@drawable/corners_accent"
        android:textStyle="bold"
        android:textAppearance="@style/LettersLoginWhite16"
        android:text="Time" />

    <LinearLayout
        android:layout_width="196dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="36dp"
        android:layout_alignStart="@+id/spinner2"
        android:layout_alignLeft="@+id/spinner2"
        android:layout_alignTop="@+id/button2"
        android:orientation="horizontal"
        android:gravity="center"

        android:layout_centerHorizontal="true"
        >

        <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
            android:id="@+id/dia"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/button2"
            android:layout_alignLeft="@+id/spinner2"
            android:layout_alignStart="@+id/spinner2"
            android:hint="MM"
            android:layout_marginRight="5dp"
            android:textAppearance="@style/LettersMedium14"
            android:layout_marginBottom="5dp"
            android:textAlignment="center"
            android:textColorHint="#000"
            app:met_floatingLabel="normal" />

        <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
            android:id="@+id/mes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:hint="DD"
            android:textAlignment="center"
            android:textAppearance="@style/LettersMedium14"
            android:textColorHint="#ffffff"
            app:met_floatingLabel="normal" />

        <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
            android:id="@+id/anio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:hint="YYYY"
            android:textAlignment="center"
            android:textAppearance="@style/LettersMedium14"
            android:textColorHint="#ffffff"
            app:met_floatingLabel="normal" />


    </LinearLayout>


    <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
        android:id="@+id/editText2"
        android:layout_width="196dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/spinner2"
        android:layout_alignTop="@+id/button3"
        android:layout_alignLeft="@+id/spinner2"
        android:hint="AM/PM"
        android:textAppearance="@style/LettersMedium14"
        android:textAlignment="center"
        android:textColorHint="#000"
        app:met_floatingLabel="normal"/>

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:layout_marginBottom="38dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/create_class"
        android:background="@drawable/corners_accent"
        android:textStyle="bold"
        android:textAppearance="@style/LettersLoginWhite16" />


</RelativeLayout>